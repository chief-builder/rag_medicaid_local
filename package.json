{
  "name": "rag-medicaid-local",
  "version": "1.0.0",
  "description": "Local Medicaid RAG system using LM Studio, Qdrant, and Postgres BM25",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.ts",
    "ingest": "tsx src/cli/ingest.ts",
    "query": "tsx src/cli/query.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "tsx src/db/migrate.ts",
    "download:pdfs": "./scripts/download-priority-docs.sh",
    "download:webpages": "tsx scripts/download-webpages.ts",
    "download:all": "pnpm download:pdfs && pnpm download:webpages",
    "reset:ingest": "./scripts/reset-and-ingest.sh",
    "trace:query": "tsx scripts/trace-query-pipeline.ts",
    "monitor": "tsx src/cli/monitor.ts",
    "monitor:check": "tsx src/cli/monitor.ts check",
    "monitor:status": "tsx src/cli/monitor.ts status"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.12.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "md5": "^2.3.0",
    "openai": "^4.68.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.13.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^4.17.21",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.7.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "puppeteer": "^23.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^2.1.2"
  }
}
